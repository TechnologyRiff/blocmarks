<p>New Bookmark</p>
  <%= form_for @topic.bookmark do |f| %>
    <div class="form-group">
      <%= f.label :url %><span class="glyphicon glyphicon-bookmark"></span>
      <%= f.text_field :url, class: 'form-control', placeholder: "Enter website" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success btn-sm' %>
    </div>
  <% end %>
