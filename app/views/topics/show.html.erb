
<%= render partial: 'topics/form', locals: { user_id: current_user.id } %>
<h4><%= @topic.title %></h4>
<% if @topic %>
  <%= link_to edit_topic_path(@topic), class: 'btn btn-success' do %>
    <span class="glyphicon glyphicon-pencil"></span>
  <% end %>
  <%= link_to @topic, data: { confirm: 'Are you sure you want to delete this topic?' }, method: :delete, class: 'btn btn-danger' do %>
  <span class="glyphicon glyphicon-trash"></span>
  <% end %>
<% end %>

<p><% @topic.bookmarks.each do |bookmark| %>
    <%= link_to "#{bookmark.url}", @url %>
  <% end %>