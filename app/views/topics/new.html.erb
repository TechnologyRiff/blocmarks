<h1>New Topic</h1>
  <%= form_for @topic do |f| %>
    <div class="form-group">
      <%= f.label :title %><br />
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter topic" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success btn-sm' %>
    </div>
  <% end %>
